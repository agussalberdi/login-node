<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Registro</title>
    <% include partials/head %>
</head>
<body>
    <section id="signup">
        <div class="wrapper">
            <div class="container">
                <h1><i class="fas fa-sign-in-alt"></i>Signup</h1>

                <% if (message.lenght>0){ %>
                <div class="alert">
                    <%- message %>
                </div>
                <% } %>

                <form action="/signup" method="POST">
                    <label for="email">Email</label>
                    <input type="email" name="email" placeholder="Ingrese su email" required>

                    <label for="password">Password</label>
                    <input type="password" name="password" placeholder="Ingrese su contraseña" required>

                    <label for="nombre">Nombre</label>
                    <input type="text" name="nombre" placeholder="Ingrese su nombre" required>

                    <label for="apellido">Apellido</label>
                    <input type="text" name="apellido" placeholder="Ingrese su apellido" required>

                    <label for="direccion">Dirección</label>
                    <input type="text" name="direccion" placeholder="Ingrese su dirección" required>

                    <label for="telefono">Telefono</label>
                    <input type="text" name="telefono" placeholder="Ingrese teléfono" required>

                    <label for="ciudad">Ciudad</label>
                    <input type="text" name="ciudad" placeholder="Ingrese ciudad" required>

                    <label for="provincia">Provincia</label>
                    <input type="text" name="provincia" placeholder="Ingrese provincia" required> 

                    <label for="pais">Pais</label>
                    <input type="text" name="pais" placeholder="Ingrese pais" required>

                    <input type="submit" class="button">
                </form>
                <hr>

                <div class="redirect">
                    <p>Already have an account? <a href="/login">Login</a></p>
                    <p>Or go <a href="/">Home</a>.</p>
                </div>
            </div>
        </div>
    </section>

    <% include partials/footer %>
</body>
</html>